{
  "system": {
    "version": "4.0.0",
    "log_level": "INFO",
    "cleanup_days": 30,
    "backup_enabled": true,
    "max_concurrent_tasks": 4
  },
  "database": {
    "name": "content_farm.db",
    "backup_enabled": true,
    "backup_interval": 86400
  },
  "trend_analysis": {
    "enabled": true,
    "update_interval": 3600,
    "categories": [
      "ИИ_и_автоматизация",
      "геймдев_и_киберспорт",
      "веб_разработка",
      "мобильная_разработка",
      "data_science_и_аналитика",
      "облачные_технологии",
      "кибербезопасность",
      "блокчейн_и_криптовалюты",
      "стартапы_и_инновации",
      "технологии_будущего"
    ],
    "sources": {
      "hackernews": true,
      "github": true,
      "reddit": true
    },
    "min_popularity_score": 10.0
  },
  "video_generation": {
    "enabled": true,
    "generation_interval": 1800,
    "output_dir": "generated_content",
    "formats": {
      "youtube": {
        "width": 1920,
        "height": 1080,
        "fps": 30,
        "duration": 60
      },
      "instagram": {
        "width": 1080,
        "height": 1920,
        "fps": 30,
        "duration": 30
      }
    },
    "tts": {
      "engine": "pyttsx3",
      "rate": 200,
      "volume": 0.9,
      "voice": "default"
    },
    "subtitles": {
      "enabled": true,
      "font_size": 24,
      "font_color": "white",
      "background_color": "black",
      "position": "bottom"
    }
  },
  "content_publishing": {
    "enabled": true,
    "publish_interval": 3600,
    "platforms": ["youtube", "instagram"],
    "auto_publish": false,
    "schedule_optimization": true
  },
  "web_interface": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8000,
    "debug": false,
    "cors_enabled": true
  },
  "monitoring": {
    "enabled": true,
    "metrics_interval": 300,
    "health_check_interval": 60,
    "log_rotation": true,
    "max_log_size": "10MB"
  },
  "security": {
    "api_key_rotation": false,
    "request_rate_limit": 100,
    "max_file_size": "100MB",
    "allowed_file_types": [".mp4", ".avi", ".mov", ".json", ".txt"]
  }
}
